{
  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "cpu",
      "memory",
      "disk",
      "temperature"
    ] 
  },
  "cpu": {
    "interval": 10,
    "format": "{icon} {usage}%",
    "format-icons": [
      "󰾆",
      "󰾅",
      "󰓅"
    ],
    "states": {
      "critical": 75,
      "warning": 40,
      "ok": 0
    }
  },
  "disk": {
    "interval": 30,
    "format": " {percentage_used}%",
    "tooltip-format": "{specific_used:0.2f} GB out of {specific_total:0.2f} GB available. ({percenta    ge_used}%)",
    "format-alt": "{specific_used:0.2f} GB/{specific_total:0.2f} GB",
    "states": {
      "critical": 75,
      "warning": 40,
      "ok": 0
    },
    "unit": "GB"
  },
  "memory": {
    "interval": 30,
    "format": "{icon} {percentage}%",
    "format-alt": "{icon} {used:0.2f} GiB/{total:0.2f} GiB",
    "format-icons": [
      "󰁺",
      "󰁻",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰂂",
      "󰁹"
    ],
    "states": {
      "critical": 75,
      "warning": 40,
      "ok": 0
    },
  },
  "temperature": {
    "interval": 1,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "format": " {temperatureC}°C",
    "format-critical": "<span color='@red'> {temperatureC}°C</span>",
    "critical-threshold": 80
  }
}
